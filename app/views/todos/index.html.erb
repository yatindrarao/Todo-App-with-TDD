<%= link_to "Add a new todo", new_todo_path %>
<ul class="todos">
  <% @todos.each do |todo| %>
      <li class='<%= "completed" if todo.completed? %>'>
        <%= todo.title %>
        <% if todo.completed? %>
          <%= button_to "Mark incomplete", todo_completions_path(todo), method: :delete %>
        <% else %>
          <%= button_to "Mark Complete", todo_completions_path(todo) %>
        <% end %>    
      </li>
  <% end %>
</ul>
